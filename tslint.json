{
    "extends": "tslint:recommended",
    "linterOptions": {
        "exclude": ["**/node_modules/**/*", "**/dist/**/*"]
    },
    "rules": {
        "interface-name": false,
        "max-line-length": [true, 150],
        "indent": [true, "spaces", 4],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],
        "space-within-parens": true,
        "arrow-parens": [true],
        // "linebreak-style": [
        //     true,
        //     "LF"
        // ],
        "no-console": false,
        "no-var-requires": false,
        "no-unused-expression": false,
        "no-shadowed-variable": false,
        "no-bitwise": false,
        "trailing-comma": [
            true,
            {
                "singleline": {
                    "objects": "never",
                    "arrays": "never"
                },
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "quotemark": [true, "single", "avoid-escape"],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-sort-keys": false,
        "no-angle-bracket-type-assertion": false,
        "no-eval": false,
        "no-empty": [true, "allow-empty-functions", "allow-empty-catch"],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-snake-case", "allow-leading-underscore"],
        "max-classes-per-file": false
        // "space-before-function-paren": [true, "always"]
    },
    "jsRules": {
        "max-line-length": [
            true,
            150
        ],
        "indent": [true, "spaces", 4],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],
        "space-within-parens": true,
        "arrow-parens": [true],
        // "linebreak-style": [
        //     true,
        //     "LF"
        // ],
        "no-console": false,
        "no-var-requires": false,
        "no-unused-expression": false,
        "no-shadowed-variable": false,
        "no-bitwise": false,
        "trailing-comma": [
            true,
            {
                "singleline": {
                    "objects": "never",
                    "arrays": "never"
                },
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "quotemark": [true, "single", "avoid-escape"],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-sort-keys": false,
        "no-angle-bracket-type-assertion": false,
        "no-eval": false,
        "no-empty": [true, "allow-empty-functions", "allow-empty-catch"],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-snake-case", "allow-leading-underscore"]
        // "space-before-function-paren": [true, "always"]
    }
}
