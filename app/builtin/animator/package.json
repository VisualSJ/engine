{
    "name": "animator",
    "version": "0.0.1",

    "description": "Animation editor",

    "menu": {
        "i18n:menu.panel/i18n:animator.title": {
            "message": "open",
            "icon": "./static/icon.png",
            "accelerator": "CmdOrCtrl+6"
        }
    },

    "main": "./dist/browser.js",
    "panel": {
        "title": "i18n:animator.title",
        "main": "./dist/panel/index.js",
        "icon": "./static/icon.png",
        "min-width": 500,
        "min-height": 300,
        "width": 1000,
        "height": 600,
        "shortcuts": {
            "ctrl+backspace": "deleteSelected",
            "delete": "deleteSelected",
            "del": "deleteSelected",
            "ctrl+c": "copySelected",
            "command+c": "copySelected",
            "ctrl+v": "paste",
            "command+v": "paste",
            "left": "jumpPrevFrame",
            "right": "jumpNextFrame",
            "ctrl+left": "jumpFirstFrame",
            "command+left": "jumpFirstFrame",
            "ctrl+right": "jumpLastFrame",
            "command+right": "jumpLastFrame"
        },
        "redirect": {
            "undo": "scene",
            "redo": "scene"
        }
    },
    "author": "Cocos"
}
