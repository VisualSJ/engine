CCEFFECT {
  techniques: [
    {
      passes: [
        {
          vert: sky-vs
          frag: sky-fs
          priority: min + 10
          rasterizerState: {
            cullMode: none
          }
          depthStencilState: {
            depthTest: true
            depthWrite: false
          }
          properties: {
            cubeMap: { type: 'samplerCube', value: 'default-cube' }
          }
        }
      ]
    }
  ]
}

CCPROGRAM sky-vs {
  precision mediump float;
  in vec3 a_position;

  #include <cc-global>

  out vec3 viewDir;

  void main() {
    mat4 matViewRotOnly = mat4(mat3(cc_matView));
    vec4 clipPos = cc_matProj * matViewRotOnly * vec4(a_position, 1.0);

    gl_Position = clipPos;
    gl_Position.z = clipPos.w * 0.99999;
    viewDir = a_position;
  }
}

CCPROGRAM sky-fs {
  precision mediump float;
  in vec3 viewDir;

  uniform samplerCube cubeMap;
  #include <gamma-correction>
  #include <unpack>
  out vec4 fragColor;

  void main() {
  #if USE_RGBE_CUBEMAP
      vec3 c = unpackRGBE(texture(cubeMap, viewDir));
      c = linearToGammaSpaceRGB(c / (1.0 + c));
      fragColor = vec4(c, 1.0);
  #else
      fragColor = texture(cubeMap, viewDir);
  #endif
  }
}
