%{
  techniques: [
    {
      queue: transparent
      passes: [
        {
          vert: particle-vs-legacy:lpvs_main
          frag: particle-add-smooth-fs
          rasterizerState: {
            cullMode: none
          }
          depthStencilState: {
            depthTest: true
            depthWrite: false
          }
          blendState: {
            targets: [
              {
                blend: true
                blendSrc: one
                blendDst: one_minus_src_color
                blendSrcAlpha: one
                blendDstAlpha: one_minus_src_color
              }
            ]
          }
          properties: {
            mainTexture:   { type: 'sampler2D', value: 'grey'               }
            mainTiling:    { type: 'vec2',      value: [1, 1]               }
            mainOffset:    { type: 'vec2'       value: [0, 0]               }
            frameTile:     { type: 'vec2'       value: [1,1]                }
            velocityScale: { type: 'float'      value: 0                    }
            lengthScale:   { type: 'float'      value: 0                    }
          }
        }
      ]
    }
  ]
%}

%% particle-add-smooth-fs {
  uniform sampler2D mainTexture;

  varying vec2 uv;
  varying vec4 color;

  void main () {
    // TODO: soft particle
    vec4 col = color * texture2D(mainTexture, uv);
    col.rgb *= col.a;
    gl_FragColor = col;
  }
}
