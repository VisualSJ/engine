{
    "name": "scene",
    "version": "0.0.1",

    "menu": {
        "i18n:menu.panel/i18n:scene.title": {
            "message": "open",
            "icon": "./static/icon.png",
            "accelerator": "CmdOrCtrl+1"
        },
        "i18n:menu.file/i18n:scene.new": {
            "message": "open-scene",
            "accelerator": "CmdOrCtrl+n"
        },
        "i18n:menu.file/i18n:scene.save": {
            "message": "save-scene",
            "accelerator": "CmdOrCtrl+s"
        },
        "i18n:menu.develop/i18n:scene.develop": {
            "message": "open-devtools"
        },
        "i18n:menu.operation/gizmo/transform": {
            "message": "change-gizmo-tool",
            "params": ["position"],
            "accelerator": "w"
        },
        "i18n:menu.operation/gizmo/rotation": {
            "message": "change-gizmo-tool",
            "params": ["rotation"],
            "accelerator": "e"
        },
        "i18n:menu.operation/gizmo/scale": {
            "message": "change-gizmo-tool",
            "params": ["scale"],
            "accelerator": "r"
        }
    },

    "main": "./dist/browser/index.js",
    "description": "scene about editor",
    "panel": {
        "title": "i18n:scene.title",
        "main": "./dist/panel/index.js",
        "allowClose": false,
        "allowPopup": false,
        "icon": "./static/icon.png",
        "min-width": 400,
        "min-height": 300,
        "width": 500,
        "height": 400,
        "shortcuts": {
            "ctrl+z": "undo",
            "command+z": "undo",
            "ctrl+shift+z": "redo",
            "command+shift+z": "redo"
        }
    },

    "toolbar": {
        "position": "left",
        "file": "./static/toolbar.js"
    }
}